<!--  layout for the patient editing page  -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">
    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/patient_title_label"/>
    <EditText
        android:id="@+id/patient_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/patient_title_hint"/>
    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/patient_details_label"/>
    <Button
        android:id="@+id/patient_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:id="@+id/patient_solved"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/patient_solved_label"/>
    <Button
        android:id="@+id/patient_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="patient_save"/>
</LinearLayout>